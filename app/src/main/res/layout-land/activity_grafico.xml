<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.GraficoActivity"
    android:background="@drawable/fundo_roxo">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <GridLayout
        android:layout_marginTop="3dp"
        android:columnCount="3"
        android:rowCount="1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="0dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_relampago"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/todo_1" />

                <TextView
                    android:id="@+id/txtTensao_Grafico"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:text="Tensão"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtLabel_Tensao_Grafico"
                    android:gravity="center"
                    android:text="Tensão (V)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="0dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_relampago"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/txtCorrente_Grafico"
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:text="Corrente"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtLabel_Corrente_Grafico"
                    android:gravity="center"
                    android:text="Corrente  (A)"
                    android:textColor="#8E03B4"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="0dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_relampago"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/txtPotencia_Grafico"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:text="Potência"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtLabel_Potencia_Grafico"
                    android:gravity="center"
                    android:text="Potência Ativa(KW)"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_relampago" />

                <TextView
                    android:id="@+id/txtPotenciaAparente_Grafico"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:text="Potência"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtLabel_PotenciaAparente_Grafico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Potência Aparente"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="0dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_relampago"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/txtFatorPotencia_Grafico"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:text="Potência"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtLabel_FatorPotencia_Grafico"
                    android:gravity="center"
                    android:text="Fator de Potência"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp"
            android:layout_margin="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="0dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_relampago"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/txtGasto_Grafico"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:text="Consumo"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_LabelGasto_Grafico"
                    android:gravity="center"
                    android:text="Consumo(KWh/dia)"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </android.support.v7.widget.CardView>
    </GridLayout>
</ScrollView>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/grafico_inteiro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="1dp"
            android:background="#37b100a3"
            android:orientation="horizontal"
            android:padding="15dp" />

        <TextView
            android:id="@+id/txtnomeAparelho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:text="Aparelho" />

    </RelativeLayout>



</LinearLayout>
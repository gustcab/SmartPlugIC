<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Activity.TimerActivity"
    android:background="@drawable/fundo_roxo_logos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtLigaDesliga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/inputTempo"
        android:layout_toStartOf="@+id/inputTempo"
        android:text="Desligar em:     "
        android:textSize="15sp" />


    <EditText
        android:id="@+id/inputTempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timer"
        android:layout_centerHorizontal="true"
        android:hint="Minutos"
        android:inputType="number"
        android:maxLength="4" />

    <Button
        android:id="@+id/btnsetMinutos"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:layout_alignBottom="@+id/inputTempo"
        android:layout_toEndOf="@+id/inputTempo"
        android:background="@drawable/buttonstyleselector"
        android:text="Set" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="00:00"
        android:textColor="#000"
        android:textSize="70sp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnIniciaTimer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/timer"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonstyleselector"
        android:text="Iniciar"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/timer"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btnIniciaTimer"
        android:background="@drawable/buttonstyleselector"
        android:text="Zerar"
        android:visibility="invisible"
        tools:visibility="visible" />

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context=".Activity.HomeActivity"
    tools:showIn="@layout/app_bar_home2"
    android:background="@drawable/fundo_roxo">


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/txthi"
                android:text="@string/hi_there"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="InvalidId" />


            <TextView
                android:id="@+id/txtnice"
                android:layout_marginTop="32dp"
                android:text="@string/nice_to_see_you_again"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="InvalidId" />


        </RelativeLayout>

        <GridLayout
            android:layout_marginTop="20dp"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imglight"
                        android:src="@drawable/light"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        tools:ignore="InvalidId" />

                    <TextView
                        android:id="@+id/forca"
                        android:layout_marginTop="12dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="Ligado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgDados"
                        android:src="@drawable/plug"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        tools:ignore="InvalidId" />

                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="Dados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </android.support.v7.widget.CardView>


        </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtLigaDesliga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desligar em:     "
            android:textSize="13sp"

            android:layout_alignTop="@+id/inputTempo"
            android:layout_toStartOf="@+id/inputTempo" />


        <EditText
            android:id="@+id/inputTempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/timer"
            android:layout_centerHorizontal="true"
            android:hint="Minutos"
            android:inputType="number"
            android:maxLength="4" />

        <Button
            android:id="@+id/btnsetMinutos"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:layout_alignBottom="@+id/inputTempo"
            android:layout_toEndOf="@+id/inputTempo"
            android:background="@drawable/buttonstyleselector"
            android:text="Set" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="00:00"
            android:textColor="#000"
            android:textSize="33sp"
            tools:visibility="visible"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btnIniciaTimer"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/timer"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonstyleselector"
            android:text="Iniciar"
            tools:visibility="visible"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/timer"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/btnIniciaTimer"
            android:background="@drawable/buttonstyleselector"
            android:text="Zerar"

            android:visibility="invisible"
            />

        <Button
            android:id="@+id/btnVerProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/buttonstyleselector"
            android:text="APARELHOS CONECTADOS" />

    </RelativeLayout>

</LinearLayout>